pipeline{
agent any
tools{
maven 'm1'
}
stages {
stage('build') {
steps {
sh 'mvn clean install'
}
}
stage('test') {
    steps {
      sh 'mvn test'
    }

    post {
      always {
            archiveArtifacts artifacts: 'target/**.jar', followSymlinks: false
            junit 'target/surefire-reports/*.*xml'
      }
    }
}
stage('run') {
steps {
    sh 'java -jar /home/pearl/projectmaven/demo2/target/demo1-0.0.1-SNAPSHOT.jar'
}
}

}
}
